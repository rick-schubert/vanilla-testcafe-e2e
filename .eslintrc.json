{
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      },
      "ecmaVersion": 2017
    },
    "rules": {
      "indent": ["error", 4],
      "linebreak-style": [0, "unix"],
      "quotes": ["error", "double"],
      "semi": ["error", "never"],
      "no-console": [0],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "comma-dangle": ["error", "always-multiline"],
      "react/prop-types": [0],
      "eol-last": ["error", "always"],
      "react/display-name": [0],
      "object-curly-spacing": ["error", "always"]
    }
  }
